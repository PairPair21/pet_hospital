{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        "baseUrl": "./",
        
        "paths": {
            "vite-plugin-sass": ["node_modules/vite-plugin-sass/index.js"],
            "@/*": ["./src/*", "./dist/*", ""],
            "pages/*": ["src/pages/*"],
            "components/*": ["src/components/*"]
        },

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    }
}